[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "Infrahub Repository"
authors = []
readme = "README.md"
requires-python = ">=3.11, <3.14"
dependencies = [
    "infrahub-sdk[all]>=1.13.1",
    "invoke>=2.2.0",
]

[dependency-groups]
dev = [
    "infrahub-testcontainers>=1.3.0",
    "pytest>=8.4.1",
    "pytest-asyncio>=1.0.0",
    "ruff>=0.12.0",
]

[tool.pytest.ini_options]
asyncio_mode = "auto"
testpaths = ["tests"]
