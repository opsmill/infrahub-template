[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "Infrahub Repository"
authors = []
readme = "README.md"
requires-python = ">=3.11"
dependencies = [
    "infrahub-sdk[all]>=1.13.0",
    "invoke>=2.2.0",
]

[dependency-groups]
dev = [
    "infrahub-testcontainers>=1.3.0",
    "pytest>=8.4.0",
    "pytest-asyncio>=1.0.0",
    "ruff>=0.11.13",
]

[tool.pytest.ini_options]
asyncio_mode = "auto"
testpaths = ["tests"]